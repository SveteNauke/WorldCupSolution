<Window x:Class="WorldCupWPF.FieldFormationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formation" Height="1000" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resources/field.png" Stretch="Fill"/>
        </Grid.Background>


        <!-- Gornji i donji layout u Gridu -->
        <Grid Margin="40" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,20,0,0" HorizontalAlignment="Center" Height="500">
                <UniformGrid x:Name="RowGoalieHome" Columns="1" HorizontalAlignment="Center" Margin="0,20"/>
                <UniformGrid x:Name="RowDefHome" Columns="5" HorizontalAlignment="Center" Margin="0,20"/>
                <UniformGrid x:Name="RowMidHome" Columns="5" HorizontalAlignment="Center" Margin="0,20"/>
                <UniformGrid x:Name="RowFwdHome" Columns="5" HorizontalAlignment="Center" Margin="0,20"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,20" HorizontalAlignment="Center" Height="500">
                <UniformGrid x:Name="RowFwdAway" Columns="5" HorizontalAlignment="Center" Margin="0,20"/>
                <UniformGrid x:Name="RowMidAway" Columns="5" HorizontalAlignment="Center" Margin="0,20"/>
                <UniformGrid x:Name="RowDefAway" Columns="5" HorizontalAlignment="Center" Margin="0,20"/>
                <UniformGrid x:Name="RowGoalieAway" Columns="1" HorizontalAlignment="Center" Margin="0,20"/>


            </StackPanel>
        </Grid>
    </Grid>
</Window>
