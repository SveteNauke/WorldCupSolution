<Window x:Class="WorldCupWPF.StartupSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupWPF"
        mc:Ignorable="d"
        Title="Postavke aplikacije" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Odaberite jezik:" />
        <ComboBox x:Name="cmbLanguage" Margin="0,5"/>

        <TextBlock Text="Odaberite prvenstvo:" Margin="10,10,0,0" />
        <ComboBox x:Name="cmbTournament" Margin="0,5"/>

        <TextBlock Text="Odaberite veličinu prozora:" Margin="10,10,0,0" />
        <ComboBox x:Name="cmbResolution" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Right">
            <Button Content="Potvrdi" Click="BtnConfirm_Click" Width="80" Margin="0,0,10,0" />
            <Button Content="Odustani" Click="BtnCancel_Click" Width="80" />
        </StackPanel>
    </StackPanel>
</Window>
