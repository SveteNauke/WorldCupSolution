<Window x:Class="WorldCupWPF.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupWPF"
        mc:Ignorable="d"
        Title="Player Details"
        Height="400"
        Width="300"
        Background="White"
        Foreground="Black">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="playerName"
                   FontSize="22"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    VerticalAlignment="Top"
                    Margin="0,10,0,0">

            <Image x:Name="imgPlayer"
                   Height="200"
                   Stretch="Uniform"
                   Margin="0,0,0,10"/>

            <TextBlock x:Name="shirtNumber"
                       HorizontalAlignment="Center"/>

            <TextBlock x:Name="position"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>

            <TextBlock x:Name="captain"
                       FontWeight="Bold"
                       Foreground="DarkRed"
                       Text="CAPTAIN"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       Margin="0,12,0,0"/>
        </StackPanel>
    </Grid>
</Window>
